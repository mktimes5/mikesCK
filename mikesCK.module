function mikesCK_ckeditor_plugin() {
  $module_path = drupal_get_path('module', 'mikesCK');
  return array(
    'mikesCK' => array(
      'name' => 'mikesCK',
      'desc' => 'Bitcookie Image Uploader',
      'path' => $module_path . '/static/',
      'buttons' => array(
        'mikesCK' => array(
          'icon' => 'icons/circle.png',
          'label' => 'Mike Button',
        ),
      ),
    ),
  );
}